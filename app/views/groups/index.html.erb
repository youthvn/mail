<h1>Danh Sách Nhóm</h1>

<table class="bordered-table">
  <tr>
    <th>Tên Nhóm</th>
    <th class="span13"></th>
  </tr>

  <% @groups.each do |group| %>
  <tr>
    <td>
      <h3><%= group.name %></h3></td>
    <td>
      <!-- <%= link_to 'Show', group,:class=>
      'btn small' %> -->
      <a href="/groups/<%= group.id %>/contacts" class="btn primary">Xem</a> 
      <%= link_to 'Sửa', edit_group_path(group),:class=>
      'btn small' %>
      <%= link_to 'Xóa', group, method: :delete, data: { confirm: 'Are you sure?' },:class=>'btn danger small' %></td>
      </tr>
  <% end %></table>

<br />

<%= link_to 'Thêm Nhóm Mới', new_group_path,:class=>'btn success' %>