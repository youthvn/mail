<%= form_for(@email) do |f| %>
    <fieldset>
      <legend>Send Email</legend>
      <% if @email.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@email.errors.count, "error") %> prohibited this email from being saved:</h2>

            <ul>
              <% @email.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="clearfix">
        <label for="xlInput">Danh Sách Nhận</label>
        <div class="input field">
          <%= f.text_field :send_to %>
        </div>
      </div>
      <div class="clearfix">
        <label for="xlInput">Tiêu Đề</label>
        <div class="input field">
          <%= f.text_field :title %>
        </div>
      </div>
      <div class="clearfix">
        <label for="xlInput">Tên Nhóm</label>
        <div class="input field">
          <%= f.text_area :subject,:style => 'width:548px',:placeholder=>'Nội Dung Email' %>
        </div>
      </div>
      <div class="clearfix">
        <div class="actions">
              <%= f.submit 'Create', :class => 'btn primary' %>
          <%= link_to 'Back', emails_path,:class=>'btn'%></div>
      </div>
    </fieldset>
<% end %>