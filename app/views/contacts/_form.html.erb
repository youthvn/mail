<%= form_for([:group,@contact]) do |f| %>
<fieldset>
  <legend>
    <% if @contact.id.blank? %>
    Thêm Liên Hệ
    <% else %>
    <%= @contact.fullname %>
    <% end %></legend>
  <% if @contact.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@contact.errors.count, "error") %>prohibited this contact from being saved:</h2>
    <ul>
      <% @contact.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %></li>
      <% end %></ul>
  </div>
  <% end %>
  <div class="clearfix">
    <label for="xlInput">First Name</label>
    <div class="input field">
      <%= f.text_field :firstname,:placeholder=>'first name' %></div>
  </div>
  <div class="clearfix">
    <label for="xlInput">Last Name</label>
    <div class="input field">
      <%= f.text_field :lastname,:placeholder=>'last name' %></div>
  </div>
  <div class="clearfix">
    <label for="xlInput">Full Name</label>
    <div class="input field">
      <%= f.text_field :fullname,:placeholder=>'full name' %></div>
  </div>
  <div class="clearfix">
    <label for="xlInput">Email</label>
    <div class="input field">
      <%= f.text_field :email,:placeholder=>'email address' %></div>
  </div>
  <div class="clearfix">
    <label for="xlInput">Ngày Sinh</label>
    <div class="input field">
      <%= f.date_select :birthday,:start_year =>Time.now.year - 100,:end_year => Time.now.year %></div>
  </div>
  <div class="clearfix">
    <div class="actions">
      <% if @contact.id.blank? %>
      <%= f.submit 'Create', :class =>
      'btn primary' %>
      <% else %>
      <%= f.submit 'Update', :class =>
      'btn primary' %>
      <% end %>
      <%= link_to 'Back', group_contacts_path,:class=>'btn'%></div>
  </div>
</fieldset>
<% end %>